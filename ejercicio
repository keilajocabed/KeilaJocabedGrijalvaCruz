print("Ejercicio 1") 
for a in range(1,8):
    print("*" * a)
print()

print("Ejercicio 2") 
for b in range(8, 0, -1):
    print("*" * b)
print()

print("Ejercicio 3") 
for a in range(1,8 ):
    print("*" * a)
for b in range (8, 0, -1):
    print("*" * b)
print()

print("Ejercicio 4") 
for c in range(1, 8):
    print("*" * 8)
print()
